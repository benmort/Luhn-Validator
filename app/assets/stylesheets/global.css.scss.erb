}

textarea{
  width:100%!important;
  height:80px!important;
}

textarea, input{
  font:14px/18px "Helvetica Neue",Arial,Helvetica,sans-serif;
  -moz-box-sizing:border-box;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  -webkit-appearance:none;
  background-color:#E6E6E6;
  border:1px solid #bfbfbf;
  -moz-border-radius:3px;
  -webkit-border-radius:3px;
  display:block;
  margin-bottom:12px;
  min-height:30px;
  padding:6px;
  box-shadow:inset 0 2px 10px rgba(0, 0, 0, 0.05);
  -moz-box-shadow:inset 0 2px 10px rgba(0, 0, 0, 0.05);
  -ms-box-shadow:inset 0 2px 10px rgba(0, 0, 0, 0.05);
  -o-box-shadow:inset 0 2px 10px rgba(0, 0, 0, 0.05);
  -webkit-box-shadow:inset 0 2px 10px rgba(0, 0, 0, 0.05);
  transition:background 85ms ease-in,border-color 85ms ease-in;
  -moz-transition:background 85ms ease-in,border-color 85ms ease-in;
  -ms-transition:background 85ms ease-in,border-color 85ms ease-in;
  -webkit-transition:background 85ms ease-in,border-color 85ms ease-in;

  &:hover{
    border-color:#777;
  }
  &:focus, &:active{
  background:#f6f6f6;
  border-color:#2478A8;
  box-shadow:0 0 3px #2478A8;
  -moz-box-shadow:0 0 3px #2478A8;
  -ms-box-shadow:0 0 3px #2478A8;
  -o-box-shadow:0 0 3px #2478A8;
  -webkit-box-shadow:0 0 3px #2478A8;
  }
}

input[type="submit"]{
  background:#24a828;
  background:-moz-linear-gradient(top, #24a828 0%, #1B7E1E 100%);
  background:-webkit-gradient(linear, left top, left bottom, color-stop(0%, #24a828), color-stop(100%, #1B7E1E));
  background:-webkit-linear-gradient(top, #24a828 0%, #1B7E1E 100%);
  background:-o-linear-gradient(top, #24a828 0%, #1B7E1E 100%);
  background:-ms-linear-gradient(top, #24a828 0%, #1B7E1E 100%);
  background:linear-gradient(top, #24a828 0%, #1B7E1E 100%);color:#fff;
  border:none;
  cursor:pointer;
  display:inline-block;
  font-weight:700;
  line-height:20px;
  margin:8px 4px 0 0;
  padding:7px 20px;
  text-align:center;

  &:hover, &:focus{
    background:#c2c2c2;
    background:-moz-linear-gradient(top, #1f9323 0%, #166919 100%);
    background:-webkit-gradient(linear, left top, left bottom, color-stop(0%, #1f9323), color-stop(100%, #166919));
    background:-webkit-linear-gradient(top, #1f9323 0%, #166919 100%);
    background:-o-linear-gradient(top, #1f9323 0%, #166919 100%);
    background:-ms-linear-gradient(top, #1f9323 0%, #166919 100%);
    background:linear-gradient(top, #1f9323 0%, #166919 100%);
  }
  &:active{
    background:#1B7E1E;
    background:-moz-linear-gradient(top, #1B7E1E 0%, #125414 100%);
    background:-webkit-gradient(linear, left top, left bottom, color-stop(0%, #1B7E1E), color-stop(100%, #125414));
    background:-webkit-linear-gradient(top, #1B7E1E 0%, #125414 100%);
    background:-o-linear-gradient(top, #1B7E1E 0%, #125414 100%);
    background:-ms-linear-gradient(top, #1B7E1E 0%, #125414 100%);
    background:linear-gradient(top, #1B7E1E 0%, #125414 100%);
  }
}

