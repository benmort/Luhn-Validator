source 'https://rubygems.org'

gem 'rails', '3.2.1'

group :development do
  # sqlite3 database
  gem 'sqlite3-ruby', :require => 'sqlite3'
  # development boosts
  gem 'rails-dev-boost'
  gem 'railroady'
end

group :production do
  # postgresql database
  gem 'pg'
end

group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'sass-rails',   '~> 3.2.3'
end

# default templatimg
gem 'haml'
gem 'sass'

gem 'coderay'

# heroku server
gem 'heroku', :git => "https://github.com/heroku/heroku.git"

